<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.LoginController">
    <children>
        <Label text="Login" />
        <TextField fx:id="txt_username" promptText="Username" />
        <TextField fx:id="txt_password" promptText="Password" />
        <Label fx:id="lbl_error" text="" />
        <Button fx:id="btnLogin" text="Login" onAction="#btnLoginClicked" />
    </children>
</VBox>

