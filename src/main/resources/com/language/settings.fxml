<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import java.net.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.SettingsController">
   <children>
      <!-- Top Bar -->
      <HBox alignment="CENTER" spacing="10.0" styleClass="top-bar">
         <children>
            <Label text="Settings" styleClass="title-label"/>
         </children>
         <padding>
            <Insets top="10.0" left="20.0" right="20.0" bottom="10.0"/>
         </padding>
      </HBox>

      <!-- Main Content -->
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <Button text="Change Password" styleClass="nav-button" onAction="#onChangePassClicked"/> 
            <Button text="AccountDetailsButton" text="Account Details" styleClass="nav-button" onAction="#onAccountDetailsClicked"/>
            <Button text="LogoutButton" text="Logout" styleClass="nav-button" onAction="#onLogoutClicked"/>
         <children>
      </VBox>
   </children> 
   <padding>
      <Insets top="20.0" left="20.0" right="20.0" bottom="20.0"/>
   </padding>
   <stylesheets>
      <URL value="@styles.css"/>
   </stylesheets>
</VBox>