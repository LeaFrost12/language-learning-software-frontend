<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.geometry.Insets?>
<?import java.net.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.HomeController">
   <children>
      <!-- Top Navigation Bar -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="top-bar">
         <children>
            <Label text="🌍 Language Learner" styleClass="title-label"/>
            <Button text="Profile" styleClass="nav-button" onAction="#onProfileClicked"/>
         </children>
         <padding>
            <Insets top="10.0" left="20.0" right="20.0" bottom="10.0"/>
         </padding>
      </HBox>

      <!-- Main Content -->
      <VBox alignment="CENTER" spacing="15.0">
      //TODO: Add a welcome message with the user's name
         <Label text="Welcome back, [User]!" styleClass="welcome-label"/>
         <ProgressBar fx:id="progressBar" progress="0.6" styleClass="progress-bar"/>
         <Button fx:id="startLessonButton" text="Start Lesson" styleClass="start-button" onAction="#onStartLessonClicked"/>
      </VBox>

      <!-- Bottom Navigation -->
      <HBox alignment="CENTER" spacing="15.0" styleClass="bottom-bar">
         <children>
            <Button text="Home" styleClass="nav-button"/>
            <Button text="Lessons" styleClass="nav-button"/>
            <Button text="Badges" styleClass="nav-button"/>
            <Button text="Settings" styleClass="nav-button"/>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets top="20.0" left="20.0" right="20.0" bottom="20.0"/>
   </padding>
   <stylesheets>
      <URL value="@styles.css"/>
   </stylesheets>
</VBox>
