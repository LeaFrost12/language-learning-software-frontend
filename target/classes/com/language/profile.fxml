<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox alignment="CENTER" spacing="20.0" styleClass="vbox-container" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.ProfileController">
    <children>
        <Label text="Profile Information" styleClass="header-label"/>
        
        <!-- User Info Labels -->
        <Label fx:id="firstNameLabel" text="First Name: " styleClass="info-label"/>
        <Label fx:id="lastNameLabel" text="Last Name: " styleClass="info-label"/>
        <Label fx:id="usernameLabel" text="Username: " styleClass="info-label"/>
        <Label fx:id="emailLabel" text="Email: " styleClass="info-label"/>
        <Label fx:id="phoneLabel" text="Phone Number: " styleClass="info-label"/>

        <!-- Back Button -->
        <Button text="Back to Home" onAction="#onBackToHomeClicked" styleClass="back-button"/>
    </children>
</VBox>

