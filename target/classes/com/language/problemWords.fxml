<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.ProblemWordsController">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <ImageView fx:id="whaleImage" fitHeight="100.0" fitWidth="150.0" preserveRatio="true"/>

            <!-- Problem Words List -->
            <ListView fx:id="problemWordsList" prefHeight="200.0" prefWidth="300.0"/>
            
            <!-- Word Details -->
            <Label fx:id="wordDetailsLabel" text="Select a word to see details" wrapText="true" />
            
            <!-- Back Button -->
            <Button fx:id="backHomeButton" text="Back Home" onAction="#onBackHomeClicked" styleClass="nav-button"/>
        </VBox>
    </center>
</BorderPane>
