<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.geometry.Insets?>
<?import java.net.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.UserHomeController">
   <children>
      <!-- Top Navigation Bar -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="top-bar">
         <children>
            <Label text="🌍 Language Learner" style="-fx-text-fill: #FFFFFF; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Button text="Profile" styleClass="nav-button" onAction="#onProfileClicked"/>
         </children>
         <padding>
            <Insets top="10.0" left="20.0" right="20.0" bottom="10.0"/>
         </padding>
      </HBox>

      <!-- Main Content -->
      <VBox alignment="CENTER" spacing="15.0">
         <Label fx:id="welcomeLabel" text="Welcome back!" styleClass="welcome-label"/>
         <ProgressBar fx:id="progressBar" progress="0.6" styleClass="progress-bar"/>
         <Button fx:id="startLessonButton" text="Start Lesson" styleClass="start-button" onAction="#onStartLessonClicked"/>
      </VBox>

      <!-- Bottom Navigation -->
      <HBox alignment="CENTER" spacing="15.0" styleClass="bottom-bar">
         <children>
            <Button text="Logout" styleClass="nav-button" onAction="#onHomeClicked"/>
            <Button text="Lessons" styleClass="nav-button" onAction="#onLessonsClicked"/>
            <Button text="Badges" styleClass="nav-button" onAction="#onBadgesClicked"/>
            <Button text="Settings" styleClass="nav-button" onAction="#onSettingsClicked"/>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets top="20.0" left="20.0" right="20.0" bottom="20.0"/>
   </padding>
   <stylesheets>
      <URL value="@styles.css"/>
   </stylesheets>
</VBox>