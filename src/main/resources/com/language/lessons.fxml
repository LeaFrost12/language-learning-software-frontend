<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.LessonController" alignment="CENTER" spacing="20" styleClass="lesson-container">
    <children>
        <!-- Lesson Title -->
        <Label fx:id="lessonTitleLabel" text="Lesson Title" styleClass="lesson-title"/>

        <!-- Question Text -->
        <Label fx:id="questionLabel" text="Question will appear here." styleClass="question-label"/>

        <!-- Answer Input -->
        <TextField fx:id="answerField" promptText="Enter your answer here" styleClass="answer-field"/>

        <!-- Feedback Label -->
        <Label fx:id="feedbackLabel" text="" styleClass="feedback-label"/>

        <!-- Buttons -->
        <Button text="Submit" onAction="#onSubmitClicked" styleClass="submit-button"/>
        <Button text="Next Question" onAction="#onNextQuestionClicked" styleClass="next-button" disable="true" fx:id="nextButton"/>
        <Button fx:id="backHomeButton" text="Back Home" onAction="#onBackHomeClicked" styleClass="nav-button" />
    </children>
</VBox>
