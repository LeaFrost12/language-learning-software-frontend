<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.LoginController" styleClass="login-container">
    <children>
        <Label text="Login" styleClass="header-label" />
        <TextField fx:id="txt_username" promptText="Username" styleClass="input-field" />
        <TextField fx:id="txt_password" promptText="Password" styleClass="input-field" />
        <Label fx:id="lbl_error" text="" styleClass="error-label" />
        <Button fx:id="btnLogin" text="Login" onAction="#btnLoginClicked" styleClass="login-button" />
        <Button fx:id="backHomeButton" text="Back" onAction="#back" styleClass="nav-button"/>
    </children>
</VBox>