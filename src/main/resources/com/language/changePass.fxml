<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.ChangePassController" styleClass="login-container">
    <children>
        <!-- Whale Image -->
        <ImageView fx:id="whaleImage" fitHeight="120.0" fitWidth="150.0" preserveRatio="true" />
        <!-- Header Label -->
        <Label text="Password Change" styleClass="header-label" />
        <!-- Input Fields -->
        <TextField fx:id="txt_username" promptText="Username" styleClass="input-field" />
        <TextField fx:id="txt_oldPassword" promptText="Old Password" styleClass="input-field" />
        <TextField fx:id="txt_newPassword" promptText="New Password" styleClass="input-field" />
        <TextField fx:id="txt_confirmPassword" promptText="Confirm New Password" styleClass="input-field" />
        <Label fx:id="lbl_error" text="" styleClass="error-label" />
        <Button fx:id="btnChange" text="Change Password" onAction="#btnChangeClicked" styleClass="login-button" />
        <Button fx:id="backHomeButton" text="Back" onAction="#back" styleClass="nav-button"/>
    </children>
</VBox>