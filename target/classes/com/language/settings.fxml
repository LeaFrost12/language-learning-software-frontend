<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.geometry.Insets?>
<?import java.net.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.SettingsController">
   <children>
      <!-- Top Navigation Bar -->
      <HBox alignment="CENTER" spacing="10.0" styleClass="top-bar">
         <children>
            <Label text="Settings" style="-fx-text-fill: #FFFFFF; -fx-font-size: 24px; -fx-font-weight: bold;"/>
         </children>
         <padding>
            <Insets top="10.0" left="20.0" right="20.0" bottom="10.0"/>
         </padding>
      </HBox>

      <!-- Main Content -->
      <VBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="ChangePassButton" text="Change Password" styleClass="start-button" onAction="#onChangePassClicked"/> 
            <Button fx:id="AccountDetailsButton" text="Account Details" styleClass="start-button" onAction="#onAccountDetailsClicked"/>
            <Button fx:id="LogoutButton" text="Logout" styleClass="start-button" onAction="#onLogoutClicked"/>
         </children>
      </VBox>
   </children> 
   <padding>
      <Insets top="20.0" left="20.0" right="20.0" bottom="20.0"/>
   </padding>
   <stylesheets>
      <URL value="@styles.css"/>
   </stylesheets>
</VBox>