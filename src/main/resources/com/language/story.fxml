<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.StoryController" styleClass="story-page">
    <!-- Center: Main Story Content -->
    <center>
        <VBox alignment="CENTER" spacing="30.0" styleClass="story-container">
            <!-- Story Title -->
            <Label fx:id="storyTitleLabel" text="A Spanish Story" styleClass="story-title"/>

            <!-- Story Text -->
            <Label fx:id="storyTextLabel" wrapText="true" styleClass="story-text" maxWidth="300.0" />
        </VBox>
    </center>

    <!-- Bottom: Narrate Button -->
    <bottom>
        <VBox alignment="CENTER" spacing="10.0" styleClass="narrate-container">
            <Button text="Narrate Story ðŸ“¢" onAction="#onNarrateStoryClicked" styleClass="narrate-button"/>
        </VBox>
    </bottom>
</BorderPane>
