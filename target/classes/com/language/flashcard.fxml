<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.FlashcardsController">
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="top-bar">
        <children>
            <Button fx:id="backButton" onAction="#goBack" styleClass="nav-button" text="◀" />
        </children>
    </HBox>

    <!-- Title -->
    <VBox alignment="CENTER" spacing="10.0">
        <Label styleClass="header-label" text="Flash Cards" />
        <Label styleClass="subtitle" text="Study On Your Own!" />
    </VBox>

    <!-- Flashcard Container -->
    <StackPane prefHeight="200.0" prefWidth="300.0" styleClass="flashcard-container">
        <children>
            <!-- Flashcard Content -->
            <VBox fx:id="flashcard" alignment="CENTER" onMouseClicked="#flipCard" spacing="10.0">
                <Label fx:id="unitLabel" styleClass="unit-label" text="Unit 1" />
                <Label fx:id="wordLabel" onMouseClicked="flipCard" styleClass="word-label" text="Word" />
                <ImageView fx:id="waveImage" fitHeight="40.0" preserveRatio="true" />
                <Label styleClass="click-to-reveal" text="Click to Reveal Answer" />
            </VBox>
        </children>
    </StackPane>

    <!-- Navigation Button -->
    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="nextCardButton" onAction="#nextCard" styleClass="next-button" text="Next Card ▶" />
    </HBox>
</VBox>
