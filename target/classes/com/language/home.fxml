<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane id="AnchorPane" prefHeight="600" prefWidth="400" fx:id="library_pane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.HomeController" styleClass="anchor-pane">
    <children>
        <VBox alignment="CENTER" spacing="20.0" prefWidth="400.0" prefHeight="600.0">
            <!-- Header -->
            <Label fx:id="label" text="Welcome to Language Learning App!" styleClass="header-label"/>

            <!-- Whale Image -->
            <ImageView fx:id="whaleImage" fitHeight="150.0" fitWidth="200.0" preserveRatio="true"/>

            <!-- Buttons -->
            <VBox alignment="CENTER" spacing="10.0">
                <Button fx:id="button" text="Login" onAction="#onLoginClicked" styleClass="primary-button"/>
                <Button fx:id="button1" text="Signup" onAction="#onSignupClicked" styleClass="secondary-button"/>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
